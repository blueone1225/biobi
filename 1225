<body>
  <h1>錯位演出：殭屍犬咬錯對象模擬</h1>
  <div id="scene">
    <div class="character" id="jill"></div>
    <div class="corpse" id="corpse"></div>
    <div class="dog" id="dog"></div>
    <div class="dialogue" id="dialogue">好吃……嗯？不對？</div>
  </div>

  <script>
    const dog = document.getElementById("dog");
    const corpse = document.getElementById("corpse");
    const dialogue = document.getElementById("dialogue");

    let biteLevel = 0;
    let hasSpoken = false;

    function moveDogTowardCorpse() {
      const dogX = dog.offsetLeft;
      const corpseX = corpse.offsetLeft;

      if (dogX > corpseX + 30) {
        dog.style.left = (dogX - 2) + "px";
      } else {
        biteCorpse();
      }
    }

    function biteCorpse() {
      if (biteLevel < 6) {
        biteLevel++;
        dog.style.bottom = (40 + biteLevel * 10) + "px";

        // 顯示泡泡文字一次
        if (!hasSpoken) {
          dialogue.style.display = "block";
          hasSpoken = true;
        }

        setTimeout(biteCorpse, 600);
      }
    }

    setInterval(moveDogTowardCorpse, 30);
  </script>
</body>
